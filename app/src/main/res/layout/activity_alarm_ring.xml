<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1B1F"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/ring_alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="02:30"
        android:textColor="@color/white"
        android:textSize="80sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ring_alarm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ring_alarm_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Feed the cat"
        android:textColor="@color/edit_screen_text_secondary"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/snooze_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="@color/edit_screen_card_background"
            android:text="Snooze"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/stop_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:backgroundTint="@color/edit_screen_accent"
            android:text="Stop"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>